# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Movie {
  _id: ID!
  name: String!
  poster: String!
  actors: [Attr!]!
  watched: Boolean!
}

type Attr {
  name: String!
  importance: Int!
}

type Query {
  movies(attr: String!): [Movie!]!
}

input NewMovie {
  name: String!
  poster: String!
  actors: [InputAttr!]!
  watched: Boolean!
}

input InputAttr {
  name: String!
  importance: Int!
}

type Mutation {
  insertMovie(input: NewMovie!): Movie!
}